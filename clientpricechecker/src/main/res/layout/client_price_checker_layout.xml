<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ClientPriceCheckerLayout">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/BarCode"
            android:layout_marginTop="-50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <requestFocus />

        </EditText>

        <ImageView
            android:id="@+id/Background"

            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
        <!--   android:background="@drawable/background2spar.png"-->

        <LinearLayout
            android:id="@+id/LogoLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:visibility="visible"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="282dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="56dp"
                />

            <ImageView
                android:id="@+id/CheckPrice_UA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/check_the_price" />

            <ImageView
                android:id="@+id/CheckPrice_HU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/presssssss" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/InfoLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:visibility="invisible">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/Logo2"
                    android:layout_width="278dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                     />

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text='Коржі "Медові" 400г /Домашні Продукти/ Коржі "Медові" 400г /Домашні Продукти/'
                    android:background="#E31E25"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textSize="52dp"
                    android:textStyle="bold"
                    android:textScaleX="1.3"
                    android:layout_marginTop="10px"
                    android:textColor="#fefefe"/>

                <TextView
                    android:id="@+id/BarCodeView"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:background="#E31E25"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="26dp"
                    android:textSize="26dp"
                    android:text="4820186120776"
                    android:paddingRight="26dp"
                    android:textStyle="bold"
                    android:textScaleX="1.3"
                    android:layout_marginTop="26dp"
                    android:layout_gravity="right"
                    android:textColor="#fefefe"/>

                <TextView
                    android:id="@+id/Article"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:background="#E31E25"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textSize="26dp"
                    android:text="00093611"
                    android:textStyle="bold"
                    android:textScaleX="1.3"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:textColor="#fefefe"/>

                <TextView
                    android:id="@+id/Sum"
                    android:layout_width="312dp"
                    android:layout_height="wrap_content"
                    android:background="#E31E25"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textSize="40dp"
                    android:text="00093611"
                    android:textStyle="bold"
                    android:textScaleX="1.3"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="right"
                    android:textColor="#fefefe"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="94dp">

                <TextView
                    android:id="@+id/Action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#E31E25"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:text="АКЦІЯ"
                    android:textColor="#fefefe"
                    android:textSize="40dp"
                    android:visibility="invisible"
                    android:textScaleX="1.3"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#008550"
                    android:layout_width="wrap_content"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/PriceBill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#fefefe"
                        android:textSize="128dp"
                        android:textStyle="bold"
                        android:includeFontPadding="false"
                        android:textScaleX="1.3"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/PriceCoin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00"
                            android:textColor="#fefefe"
                            android:textSize="64dp"
                            android:layout_marginTop="15dp"
                            android:includeFontPadding="false"
                            android:textStyle="bold"
                            android:textScaleX="1.3" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="грн"
                            android:textColor="#fefefe"
                            android:textSize="64dp"
                            android:includeFontPadding="false"
                            android:lineSpacingExtra="0dp"
                            android:layout_marginTop="-30dp"
                            android:textScaleX="1.3"/>

                    </LinearLayout>

                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/OptPriceBlock"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/OptTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#E31E25"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingLeft="26dp"
                            android:paddingRight="26dp"
                            android:textColor="#fefefe"
                            android:layout_gravity="right"
                            android:textSize="40dp"
                            android:text="від 5 шт."/>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:background="#008550"
                            android:layout_width="wrap_content"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/PriceBillOpt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#fefefe"
                                android:textSize="164dp"
                                android:textStyle="bold"
                                android:includeFontPadding="false"
                                android:textScaleX="1.3"/>
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/PriceCoinOpt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00"
                                    android:textColor="#fefefe"
                                    android:textSize="73dp"
                                    android:layout_marginTop="23dp"
                                    android:includeFontPadding="false"
                                    android:textStyle="bold"
                                    android:textScaleX="1.3" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="грн"
                                    android:textColor="#fefefe"
                                    android:textSize="73dp"
                                    android:includeFontPadding="false"
                                    android:lineSpacingExtra="0dp"
                                    android:layout_marginTop="-33dp"
                                    android:textScaleX="1.3"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:background="#3D9C6E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:lines="2"
            android:text="З питань працевлаштування звертайтесь за тел: 050 549 6971 \n Ha szeretnél nálunk dolgozni 050 549 6971"
            android:textColor="#fefefe"
            android:textStyle="bold"
            android:textScaleX="1.3"
            android:textSize="26dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false"
            android:focusable="false">

        <VideoView
            android:id="@+id/PromoVideo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:visibility="invisible"
            />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/VideoWatermark"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible">

        <TextView
            android:background="#07000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:text="ПЕРЕВІР ЦІНУ"
            android:textSize="160dp"
            android:alpha="0.3"
            android:textColor="#FFFFFF"
            />

            <TextView
                android:background="#07000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="Ár ellenőrzése"
                android:textSize="120dp"
                android:alpha="0.3"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="false"
            android:focusable="false">

        </LinearLayout>
    </FrameLayout>

</LinearLayout>

    <Button
        android:id="@+id/HiddenInfoBtn"
        android:layout_width="120dp"
        android:background="#00FFFFFF"
        android:layout_height="120dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:background="#ffffff"
        android:id="@+id/HideInfoLayout"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_weight="1">

    </LinearLayout>

    </LinearLayout>

</FrameLayout>
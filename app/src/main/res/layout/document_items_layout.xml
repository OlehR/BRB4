<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DocumentItemsFrame"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/DocumentItemsList"
        android:layout_width="match_parent"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="25dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/InventoriesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/DI_Button"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:weightSum="2"
        android:visibility="gone"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="70dp">

        <Button
            android:id="@+id/F3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Зберегти"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/F4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Додати товари"
            android:layout_weight="1"/>
        android:visibility="gone"
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:weightSum="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="25dp"
        android:background="@color/SuccessBackground">
        <RelativeLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/f3Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:textSize="18dp"
                android:text="f3-"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:textSize="18dp"
                android:layout_toRightOf="@+id/f3Text"
                android:text="зберегти"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:textSize="18dp"
                android:layout_toLeftOf="@+id/downtext"
                android:text=" 8-"/>

            <TextView
                android:id="@+id/downtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:textSize="18dp"
                android:layout_alignParentRight="true"
                android:text="↓ "/>

        </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_weight="1">

            <TextView
                android:id="@+id/uptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:textSize="18dp"
                android:text=" 2-"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:textSize="18dp"
                android:layout_toRightOf="@+id/uptext"
                android:text="↑"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/f4Text"
                android:textSize="18dp"
                android:text=" f4-"/>

            <TextView
                android:id="@+id/f4Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:layout_alignParentRight="true"
                android:textSize="18dp"
                android:text="додати"/>

    </RelativeLayout>


    </LinearLayout>

</FrameLayout>
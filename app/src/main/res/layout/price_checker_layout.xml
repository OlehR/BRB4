<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/scan_fragment"
        android:name="ua.uz.vopak.brb4.brb4.fragments.ScanFragment"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        tools:layout="@layout/scan_fragment" />

    <Button
        android:id="@+id/ChangePrintType"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Широкий" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="5dp"
        android:progress="0"
        android:max="100"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:progressDrawable="@drawable/progresbar" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TableLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2,3">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/code_text"
                    android:layout_column="0"
                    android:text="Код:"
                    android:textSize="7pt"></TextView>

                <TextView
                    android:id="@+id/code"
                    android:layout_column="1"
                    android:textSize="7pt"></TextView>

                <TextView
                    android:id="@+id/per_text"
                    android:layout_column="2"
                    android:text="Од:"
                    android:textSize="7pt"></TextView>

                <TextView
                    android:id="@+id/per"
                    android:layout_column="3"
                    android:textSize="7pt"></TextView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/old_price_text"
                    android:layout_column="0"
                    android:text="Ціна с:"
                    android:textSize="7pt"></TextView>

                <TextView
                    android:id="@+id/old_price"
                    android:layout_column="1"
                    android:textSize="10pt"></TextView>

                <TextView
                    android:id="@+id/price_text"
                    android:layout_column="2"
                    android:text="Ціна н:"
                    android:textSize="7pt"></TextView>

                <TextView
                    android:id="@+id/price"
                    android:layout_column="3"
                    android:textSize="10pt"></TextView>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_column="0"
                    android:text="Назва:"
                    android:textSize="7pt"></TextView>

                <TextView
                    android:id="@+id/title"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:textSize="7pt"></TextView>

            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/bar_code_text"
                    android:layout_column="0"
                    android:text="Штрих код:"
                    android:textSize="7pt"></TextView>

                <TextView
                    android:id="@+id/bar_code"
                    android:layout_column="1"
                    android:layout_span="3"
                    android:textSize="7pt"></TextView>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2">

            <TableRow
                android:id="@+id/tableRowStatusBar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/Printer"
                    android:layout_column="0"
                    android:text="None"
                    android:textSize="6pt"></TextView>

                <TextView
                    android:id="@+id/Network"
                    android:layout_column="1"
                    android:text="None"
                    android:textSize="6pt"></TextView>

                <TextView
                    android:id="@+id/CountData"
                    android:layout_column="2"
                    android:text="None"
                    android:textSize="6pt"></TextView>

            </TableRow>

        </TableLayout>


    </LinearLayout>

</LinearLayout>
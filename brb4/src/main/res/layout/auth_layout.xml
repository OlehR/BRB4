<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/authorization_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fon" />

    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:gravity="center">

        <TextView
            android:id="@+id/NameStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:includeFontPadding="true"
            android:padding="5dp"
            android:text="@string/vopak"
            android:textColor="@color/white_50"
            android:textSize="48sp" />

        <EditText
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/login_style"
            android:ems="10"
            android:fontFamily="@font/main_font"
            android:gravity="center"
            android:hint="@string/login"
            android:inputType="text"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:textColorHint="@color/white_50" />
        <EditText
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:background="@drawable/login_style"
            android:textSize="15sp"
            android:hint="@string/password"
            android:textColorHint="@color/white_50"
            android:gravity="center"
            android:fontFamily="@font/main_font"
            />

        <Button
            android:id="@+id/LoginButton"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_button_press_white"
            android:fontFamily="@font/main_font"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="@string/enter"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_marginBottom="90dp"/>



    </LinearLayout>
</RelativeLayout>
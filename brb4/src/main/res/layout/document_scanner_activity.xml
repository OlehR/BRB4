<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable name="WaresItem" type="ua.uz.vopak.brb4.brb4.models.WaresItemModel"/>
    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:keepScreenOn="true"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="@{WaresItem.IsUseCamera() ? View.VISIBLE:View.GONE }"
        android:layout_weight="0.4">

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/code_128"
            android:id="@+id/DS_BarcodeImageLayout"
            android:layout_height="match_parent">
<!-- android:visibility="@{WaresItem.IsUseCamera() ? View.VISIBLE:View.GONE }" -->
            <com.journeyapps.barcodescanner.BarcodeView
                android:id="@+id/DS_scanner"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:zxing_use_texture_view="true"
                app:zxing_preview_scaling_strategy="fitCenter"/>

            <!--   android:visibility="@{LI.IsUseCamera() ? View.VISIBLE:View.INVISIBLE }"
-->
      </LinearLayout>
    </LinearLayout>

        
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@{WaresItem.ColorBackground()}"
        android:layout_weight="1">

        <TextView
            android:id="@+id/RevisionScannerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="@{WaresItem.NameWares}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_above="@+id/RevisionAboveLayout"
            android:weightSum="5">

            <EditText
                android:id="@+id/RevisionBarCode"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:ems="10"
                android:background="@drawable/input_style"
                android:focusableInTouchMode="@{WaresItem.IsInputBarCodeTouch()}"
                android:focusable="@{WaresItem.IsInputQuantity() ? false : true }"
                android:enabled="@{WaresItem.IsInputQuantity() ? false : true }"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_weight="3"
                android:text="@{WaresItem.BarCode}"
                android:windowSoftInputMode="stateHidden"/>


            <EditText
                android:id="@+id/RevisionScannerCurrentCount"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:ems="10"
                android:background="@drawable/input_style_disabled"
                android:inputType="none"
                android:textAlignment="center"
                android:focusable="false"
                android:enabled="false"
                android:layout_weight="2"
                android:text="@{ WaresItem.GetBeforeQuantity()}"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/RevisionAboveLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_above="@+id/DS_Reason"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:layout_weight="3"
                android:layout_marginRight="5dp">

                <EditText
                    android:id="@+id/RevisionInputCount"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:ems="10"
                    android:background="@drawable/input_style"
                    android:inputType="number|numberDecimal|numberSigned"
                    android:focusableInTouchMode="@{WaresItem.IsInputBarCodeTouch()}"
                    android:focusable="@{WaresItem.IsInputQuantity() ? true : false }"
                    android:enabled="@{WaresItem.IsInputQuantity() ? true : false }"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2.4"
                    android:windowSoftInputMode="stateHidden"
                    android:text="@{WaresItem.GetInputQuantity()}"
                    />
                <TextView
                    android:id="@+id/RevisionNameUnit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{WaresItem.NameUnit}"/>
                <TextView
                    android:id="@+id/RevisionX"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:text="X"/>
                <EditText
                    android:id="@+id/RevisionScannerCof"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:ems="10"
                    android:background="@drawable/input_style_disabled"
                    android:inputType="none"
                    android:focusable="false"
                    android:layout_weight="1.3"
                    android:textAlignment="center"
                    android:text="@{WaresItem.GetCoefficient()}"/>

            </LinearLayout>

            <EditText
                android:id="@+id/RevisionScannerCount"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:ems="10"
                android:background="@drawable/input_style_disabled"
                android:inputType="none"
                android:focusable="false"
                android:textAlignment="center"
                android:layout_weight="2"
                android:text="@{ WaresItem.GetQuantityBase()}"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/DS_Reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_above="@+id/RevisionBottomLayout"
            android:weightSum="5">
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="@{WaresItem.GetIsViewReason() ? View.VISIBLE:View.GONE }"
            android:entries="@{WaresItem.ListReason}"
            android:selectedItemPosition="@={WaresItem.ListReasonIdx}"
            android:layout_weight="0.25" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/RevisionBottomLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:weightSum="5">
            <!--
                        <EditText
                            android:id="@+id/RevisionCountInPosition"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:ems="10"
                            android:background="@drawable/input_style_disabled"
                            android:inputType="none"
                            android:focusable= "false"
                            android:layout_marginRight="5dp"
                            android:textAlignment="center"
                            android:layout_weight="3"/>
-->
                        <TextView
                            android:id="@+id/RevisionInPosition"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:layout_weight="2"/>

                    </LinearLayout>

                </RelativeLayout>

                <ScrollView
                    android:id="@+id/RevisionScrollView"
                    android:fillViewport="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:paddingBottom="15dp"
                    android:layout_weight="1">

                    <TableLayout
                        android:id="@+id/RevisionScanItemsTable"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="6">

                        <TableRow>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="№"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="назва"
                                android:layout_weight="3"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="к-сть"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="ст. к-сть"
                                android:layout_weight="1"/>
                        </TableRow>

                    </TableLayout>
                </ScrollView>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:weightSum="2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_height="25dp"
                    android:background="@color/SuccessBackground">

                 <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/messageError"
                            android:textSize="18dp"
                            android:text="f1-"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/messageAlert"
                            android:textSize="18dp"
                            android:text="обнулити"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/messageError"
                            android:textSize="18dp"
                            android:text=" f2-"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/messageAlert"
                            android:textSize="18dp"
                            android:text="↑"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/messageError"
                            android:textSize="18dp"
                            android:text=" f3-"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/messageAlert"
                            android:textSize="18dp"
                            android:text="↓"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

    <RelativeLayout
                    android:id="@+id/RevisionLoader"
                    android:background="#A0FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:layout_centerInParent="true"/>
    </RelativeLayout>

</FrameLayout>
</layout>
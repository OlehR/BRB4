<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable name="WaresItem" type="ua.uz.vopak.brb4.brb4.models.WaresItemModel"/>
    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="28dp"
        android:keepScreenOn="true"
        android:background="@{WaresItem.IsUseCamera() ? View.VISIBLE:View.GONE }">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="@{WaresItem.IsUseCamera() ? View.VISIBLE:View.GONE }"
            android:layout_weight="0.2">

        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/code_128"
            android:id="@+id/DS_BarcodeImageLayout"
            android:layout_height="match_parent">
<!-- android:visibility="@{WaresItem.IsUseCamera() ? View.VISIBLE:View.GONE }" -->
            <com.journeyapps.barcodescanner.BarcodeView
                android:id="@+id/DS_scanner"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:zxing_use_texture_view="true"
                app:zxing_preview_scaling_strategy="centerCrop"/>

            <!--   android:visibility="@{LI.IsUseCamera() ? View.VISIBLE:View.INVISIBLE }"
-->
        </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:background="@{WaresItem.ColorBackground()}"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:layout_weight="6"
                    android:text="@{WaresItem.NameWares}"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="5">
<!-- -->
                <EditText
                    android:id="@+id/RevisionBarCode"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:background="@drawable/input_style"
                    android:ems="10"
                    android:enabled="@{WaresItem.IsInputQuantity() ? false : true }"
                    android:focusable="@{WaresItem.IsInputQuantity() ? false : true }"
                    android:focusableInTouchMode="@{WaresItem.IsInputBarCodeTouch()}"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:text="@{WaresItem.BarCode}"
                    android:textAlignment="center"
                     />


                <EditText
                    android:id="@+id/RevisionScannerCurrentCount"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:background="@drawable/input_style_disabled"
                    android:ems="10"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="none"
                    android:padding="5dp"
                    android:text="@{ WaresItem.GetBeforeQuantity()}"
                    android:textAlignment="center"
                     />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/RevisionAboveLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"

                android:weightSum="5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="3"
                    android:weightSum="5">

                    <EditText
                        android:id="@+id/RevisionInputCount"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="2.4"
                        android:background="@drawable/input_style"
                        android:ems="10"
                        android:enabled="@{WaresItem.IsInputQuantity() ? true : false }"
                        android:focusable="@{WaresItem.IsInputQuantity() ? true : false }"
                        android:focusableInTouchMode="@{WaresItem.IsInputQuantityTouch()}"
                        android:inputType="number|numberDecimal|numberSigned"
                        android:padding="5dp"
                        android:text=""
                         />

                    <TextView
                        android:id="@+id/RevisionNameUnit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@{WaresItem.NameUnit}" />

                    <TextView
                        android:id="@+id/RevisionX"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="X" />

                    <EditText
                        android:id="@+id/RevisionScannerCof"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1.3"
                        android:background="@drawable/input_style_disabled"
                        android:ems="10"
                        android:focusable="false"
                        android:inputType="none"
                        android:padding="5dp"
                        android:text="@{WaresItem.GetCoefficient()}"
                        android:textAlignment="center" />

                </LinearLayout>

                <EditText
                    android:id="@+id/RevisionScannerCount"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:background="@drawable/input_style_disabled"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="none"
                    android:padding="5dp"
                    android:text="@{ WaresItem.GetQuantityBase()}"
                    android:textAlignment="center" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/DS_Reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"

                android:weightSum="5">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0.25"
                    android:entries="@{WaresItem.ListReason}"
                    android:selectedItemPosition="@={WaresItem.ListReasonIdx}"
                    android:visibility="@{WaresItem.GetIsViewReason() ? View.VISIBLE:View.GONE }" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/RevisionBottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="5">
                <!--
                        <EditText
                            android:id="@+id/RevisionCountInPosition"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:padding="5dp"
                            android:ems="10"
                            android:background="@drawable/input_style_disabled"
                            android:inputType="none"
                            android:focusable= "false"
                            android:layout_marginRight="5dp"
                            android:textAlignment="center"
                            android:layout_weight="3"/>
-->
                <TextView
                    android:id="@+id/RevisionInPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textAlignment="center" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5">
        <ScrollView
            android:id="@+id/RevisionScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <TableLayout
                android:id="@+id/RevisionScanItemsTable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="6">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="№" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:text="назва" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="к-сть" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ст. к-сть" />
                </TableRow>

            </TableLayout>
        </ScrollView>
    </LinearLayout>
    </LinearLayout>
<!--
    <RelativeLayout
                    android:id="@+id/RevisionLoader"
                    android:background="#A0FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">
                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:layout_centerInParent="true"/>
    </RelativeLayout>
-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="bottom"
        android:layout_marginBottom="28dp">
        android:orientation="vertical">

    <ua.uz.vopak.brb4.brb4.helpers.MyKeyboard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:layout_gravity="bottom"
        android:background="@color/SuccessBackground"
        android:gravity="bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/DS_F1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:clickable="true"
                android:onClick="onClick"
                android:textSize="18dp"
                android:text="f1-"/>

            <TextView
                android:id="@+id/DS_F1_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:clickable="true"
                android:onClick="onClick"
                android:textSize="18dp"
                android:text="обнулити"/>

            <TextView
                android:id="@+id/DS_F2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:clickable="true"
                android:onClick="onClick"
                android:textSize="18dp"
                android:text=" f2-"/>

            <TextView
                android:id="@+id/DS_F2_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:clickable="true"
                android:onClick="onClick"
                android:textSize="18dp"
                android:text="↑"/>

            <TextView
                android:id="@+id/DS_F3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:clickable="true"
                android:onClick="onClick"
                android:textSize="18dp"
                android:text=" f3-"/>

            <TextView
                android:id="@+id/DS_F3_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:clickable="true"
                android:onClick="onClick"
                android:textSize="18dp"
                android:text="↓"/>
            <TextView
                android:id="@+id/DS_F8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:clickable="true"
                android:onClick="onClick"
                android:textSize="18dp"
                android:text=" f8-"/>

            <TextView
                android:id="@+id/DS_F8_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:clickable="true"
                android:onClick="onClick"
                android:textSize="18dp"
                android:text=" -"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
</layout>
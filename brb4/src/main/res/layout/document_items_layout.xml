            android:layout_height="70dp">

            <Button
                android:id="@+id/F2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Зберегти"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/F3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Сканувати товари"

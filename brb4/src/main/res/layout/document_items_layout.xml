<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DocumentItemsFrame"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <EditText
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/messageError"
            android:textSize="18dp"
            android:windowSoftInputMode="stateHidden"
             android:text=""/>

        <EditText
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/messageAlert"
            android:textSize="18dp"
            android:windowSoftInputMode="stateHidden"
            android:text=""/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/DocumentItemsList"
        android:layout_width="match_parent"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="25dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/InventoriesList"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/DI_Button"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:weightSum="2"
        android:visibility="gone"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="70dp">

        <Button
            android:id="@+id/F2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Зберегти"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/F3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Сканувати товари"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/F4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Спис Товарів"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:focusable="false"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:weightSum="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_height="25dp"
        android:background="@color/SuccessBackground">

        <LinearLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:textSize="18dp"
                android:text=" 8-"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:textSize="18dp"
                android:text="↑"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:textSize="18dp"
                android:text=" 2-"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:textSize="18dp"
                android:text="↓"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:textSize="18dp"
                android:text="F2-"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:textSize="18dp"
                android:text="Зберегти"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:textSize="18dp"
                android:text=" F3-"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:textSize="18dp"
                android:text="Сканувати"/>

            <TextView
                android:id="@+id/FilterKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageError"
                android:textSize="18dp"
                android:text=" F4-"/>

            <TextView
                android:id="@+id/FilterText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/messageAlert"
                android:textSize="18dp"
                android:text="Список"/>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
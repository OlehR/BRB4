                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Спис Товарів"
                android:layout_weight="1"/>

        </LinearLayout>-->
        <LinearLayout
            android:focusable="false"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:weightSum="2"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_height="25dp"
            android:background="@color/SuccessBackground">

            <LinearLayout
                android:layout_width="0dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_weight="2">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageError"
                    android:textSize="18dp"
                    android:text=" 8-"/>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageAlert"
                    android:textSize="18dp"
                    android:text="↑"/>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageError"
                    android:textSize="18dp"
                    android:text=" 2-"/>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageAlert"
                    android:textSize="18dp"
                    android:text="↓"/>

                <TextView
                    android:id="@+id/DI_F2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageError"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textSize="18dp"
                    android:text="F2-"/>
                <TextView
                    android:id="@+id/DI_F2_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageAlert"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textSize="18dp"
                    android:text="Збер"/>
                <TextView
                    android:id="@+id/DI_F3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageError"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textSize="18dp"
                    android:text=" F3-"/>
                <TextView
                    android:id="@+id/DI_F3_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageAlert"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textSize="18dp"
                    android:text="Скан"/>

                <TextView
                    android:id="@+id/DI_F4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageError"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textSize="18dp"
                    android:text=" F4-"/>

                <TextView
                    android:id="@+id/DI_F4_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageAlert"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textSize="18dp"
                    android:text="Спис"/>
                <TextView
                    android:id="@+id/DI_F6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageError"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textSize="18dp"
                    android:text=" F6-"/>

                <TextView
                    android:id="@+id/DI_F6_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/messageAlert"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textSize="18dp"
                    android:text="Док"/>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</layout>
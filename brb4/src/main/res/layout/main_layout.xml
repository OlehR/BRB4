<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/PriceCheker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selected_button"
                android:text="f1-Провірка ціни" >
            </Button>

            <Button
                android:id="@+id/Revision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/selected_button"
                android:enabled="true"
                android:state_selected="false"
                android:text="f2-Ревізія" />

            <Button
                android:id="@+id/Incom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:state_selected="false"
                android:background="@drawable/selected_button"
                android:layout_margin="5dp"
                android:enabled="true"
                android:focusable="false"
                android:text="f3-Прийомка" />

            <Button
                android:id="@+id/Moving"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:state_selected="false"
                android:layout_margin="5dp"
                android:background="@drawable/selected_button"
                android:enabled="true"
                android:focusable="false"
                android:text="f4-Переміщення" />

            <Button
                android:id="@+id/WriteOff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:state_selected="false"
                android:layout_margin="5dp"
                android:background="@drawable/selected_button"
                android:enabled="true"
                android:focusable="false"
                android:text="f5-Списання" />

            <Button
                android:id="@+id/Returning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:state_selected="false"
                android:layout_margin="5dp"
                android:background="@drawable/selected_button"
                android:enabled="true"
                android:focusable="false"
                android:text="f6-Повернення" />

            <Button
                android:id="@+id/Expenditure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:state_selected="false"
                android:layout_margin="5dp"
                android:background="@drawable/selected_button"
                android:enabled="true"
                android:focusable="false"
                android:text="f7-Розхідна" />
            <Button
                android:id="@+id/ML_Test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:state_selected="false"
                android:layout_margin="5dp"
                android:background="@drawable/selected_button"
                android:enabled="true"
                android:focusable="false"
                android:text="f8-Тест" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/RevisionLoader"
    android:background="#A0FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</FrameLayout>
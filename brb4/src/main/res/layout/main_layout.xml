<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable name="MM" type="ua.uz.vopak.brb4.brb4.models.MainModel"/>
    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/M_ButtonLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/M_PriceCheker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/white"
                android:background="@drawable/main_button"
                android:text="f1-Перевірка цінників" >
            </Button>


        </LinearLayout>

     <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true"
            android:max="100"
            android:progress="@{MM.Progress}"
            android:progressDrawable="@drawable/progresbar" />
    </RelativeLayout>

    <RelativeLayout
    android:id="@+id/RevisionLoader"
    android:background="#A0FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:progressDrawable="@drawable/circular_progress_bar"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</FrameLayout>
</layout>